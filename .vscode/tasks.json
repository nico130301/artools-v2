{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Tailwind CSS",
      "type": "npm",
      "script": "watch:css",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    }
  ]
}